var $storeId=$('#storeId').val();$(function(){if($('#bannerRate').length){ajaxLoadView({view:'bannerRate44904',delay:2000,onSuccess:function(rs){$('#bannerRate').html(rs);}});}
if($('#brandSlide').length){ajaxLoadView({view:'bannerBrands',delay:2000,onSuccess:function(rs){$('#brandSlide').html(rs);}});}
if($('#newsInfor').length){ajaxLoadView({view:'newsInfor',delay:2000,onSuccess:function(rs){$('#newsInfor').html(rs);}});}
if($('#popupHome.cookie').length){$('#popupHome.cookie').modal('show');}
if(in_array($storeId,[40602,3038])){$('.sendSubcrible').click(function(e){e.preventDefault();AppAjax.post('/newsletter/subscribe',{mail:$('#subscribeEmail').val(),},function(rs){if(rs.code==1){$('#subscribeEmail').val('');setTimeout(function(){$('#popupHome').modal('hide');},200);}
alert(rs.message);});});}else if(in_array(storeId,[105211,20730])){$('#contact-form-popup').click(function(){var newsletter_input=$('#email-popup');if(newsletter_input.val()==''||$('#mobile-popup').val()==''||$('#name-popup').val()==''){alert('Vui lòng điền đầy đủ thông tin');}else{AppAjax.post('/newsletter/subscribe',{'name':$('#name-popup').val(),'mobile':$('#mobile-popup').val(),'mail':newsletter_input.val(),},function(rs){if(rs.code==1){$('#mobile-popup').val('');$('#name-popup').val('');alert('Đăng ký thành công');setTimeout(function(){$('#popupHome').modal('hide');},200);}});}});}else{$('#contact-form-popup').click(function(){var newsletter_input=$('#email-popup');if(newsletter_input.val()==''){alert('Vui lòng điền đầy đủ thông tin');}else{AppAjax.post('/newsletter/subscribe',{mail:newsletter_input.val()},function(rs){if(rs.code==1){$('#email-popup').val('');alert('Đăng ký thành công');setTimeout(function(){$('#popupHome').modal('hide');},200);}});}});}});